        <result column="user_id" property="userId"/>
    </resultMap>
    <insert id="insert" parameterType="com.nightriver.jungle.common.pojo.Article" useGeneratedKeys="true"
            keyProperty="articleId">
    INSERT INTO article (article_id, article_title, user_id, article_content, article_forum)
    VALUES (#{articleId}, #{articleTitle}, #{userId}, #{articleContent}, #{articleForum})
    </insert>
    <select id="selectOne" parameterType="com.nightriver.jungle.common.pojo.Article" resultMap="BaseResultMap">
        SELECT * FROM article
        <where>
            <if test="articleId != null">
                article_id = #{articleId}
            </if>
            <if test="articleTitle != null">
                AND article_title like #{articleTitle}
            </if>
            <if test="articleDescription != null">
                AND article_description like #{articleDescription}
            </if>
            <if test="articleForum != null">
                AND article_forum = #{articleForum}
            </if>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
        </where>
        LIMIT 1
    </select>
    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT * FROM article
        <where>
            <if test="articleId != null">
                article_id = #{articleId}
            </if>
        </where>
        LIMIT 1
    </select>
    <select id="count" parameterType="com.nightriver.jungle.common.pojo.Article" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM article
        <where>
            <if test="articleId != null">
                article_id = #{articleId}
            </if>
            <if test="articleTitle != null">
                AND article_title like #{articleTitle}
            </if>
            <if test="articleDescription != null">
                AND article_description like #{articleDescription}
            </if>
            <if test="articleForum != null">
                AND article_forum = #{articleForum}
            </if>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
        </where>
    </select>
    <select id="selectList" parameterType="com.nightriver.jungle.common.pojo.Article" resultMap="BaseResultMap">
        SELECT * FROM article
        <where>
            <if test="articleId != null">
                article_id = #{articleId}
            </if>
            <if test="articleTitle != null">
                AND article_title like #{articleTitle}
            </if>
            <if test="articleDescription != null">
                AND article_description like #{articleDescription}
            </if>
            <if test="articleForum != null">
                AND article_forum = #{articleForum}
            </if>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
        </where>
        ORDER BY article_create DESC
    </select>
    <update id="update" parameterType="com.nightriver.jungle.common.pojo.Article">
        UPDATE article
        <set>
            <if test="articleTitle != null">article_title=#{articleTitle},</if>
            <if test="articleForum != null">article_forum=#{articleForum},</if>
            <if test="articleDescription != null">article_description=#{articleDescription}, </if>
            <if test="articleContent != null">article_content=#{articleContent},</if>
            <if test="userId != null">user_id=#{userId}</if>
        </set>
        WHERE article_id=#{articleId}
    </update>
    <delete id="delete" parameterType="java.lang.Integer">
      DELETE FROM article WHERE article_id = #{articleId}
    </delete>
</mapper>