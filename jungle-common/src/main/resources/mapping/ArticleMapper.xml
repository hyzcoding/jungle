<mapper namespace="com.nightriver.jungle.common.dao.ArticleMapper">
    <resultMap id="BaseResultMap" type="com.nightriver.jungle.common.pojo.Article">
        <id column="article_id" property="articleId"/>
        <result column="article_title" property="articleTitle"/>
        <result column="article_description" property="articleDescription"/>
        <result column="article_content" property="articleContent"/>
        <result column="article_views" property="articleViews"/>
